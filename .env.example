# Object Storage Configuration
HZ_OBJ_ACCESS_KEY="Object storage access key"
HZ_OBJ_SECRET_KEY="Object storage secret key"
HZ_OBJ_API_TOKEN="Object storage API token"
HZ_OBJ_ENDPOINT="Object storage endpoint"
HZ_OBJ_BUCKET_NAME="Object storage bucket name"
HZ_OBJ_USE_SSL="true"

# Database Configuration
PROJECT_NAME="Corpus TE"

# SQLite (comment out when using PostgreSQL)
# DATABASE_URL="sqlite:///./corpus_te.db"

# PostgreSQL Configuration
POSTGRES_DB=corpus_te
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_password_here

# Database Configuration
DATABASE_URL=postgresql://postgres:your_secure_password_here@localhost:5432/corpus_te

# CORS Origins (comma-separated for production)
BACKEND_CORS_ORIGINS="http://localhost:3000,http://localhost:8080"


# JWT Configuration (change in production)
APP_SECRET_KEY="your_secret_key_here"
ALGORITHM="HS256"
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Logging
LOG_LEVEL="WARNING"

# File Upload Settings
MAX_FILE_SIZE=104857600  # 100MB in bytes

# Celery Configuration
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0
CELERY_TASK_TIME_LIMIT=600
CELERY_TASK_SOFT_TIME_LIMIT=300

# Redis Configuration (if separate from Celery)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_TLS=true
